TestCase subclass: #ItemTests	instanceVariableNames: ''	classVariableNames: ''	poolDictionaries: ''	category: 'GroceryTests'!!ItemTests methodsFor: 'as yet unclassified' stamp: 'DS 1/7/2017 09:22'!testGroceryBuysBundleOfItemsWithCostAndSellsItAtPrice	| item bundle |	bundle := Bundle of: 5 at: 10.	item := Item price: 10 cost: bundle.	self assert: 8 equals: item margin.		! !!ItemTests methodsFor: 'as yet unclassified' stamp: 'DS 1/7/2017 10:15'!testGroceryBuysItemWithCostAndSellsAsBundle	| item sellingBundle buyingBundle |	buyingBundle := Bundle of: 500 at: 10.	item := Item price: 5 cost: buyingBundle.		sellingBundle := SellingBundle item: item count: 5 price: 10.		self assert: 9.9 equals: sellingBundle margin asFloat.		! !!ItemTests methodsFor: 'as yet unclassified' stamp: 'DS 1/7/2017 09:00'!testGroceryBuysItemWithCostAndSellsItAtPrice	| item |	item := Item price: 10 cost: 8.	self assert: 2 equals: item margin.		! !